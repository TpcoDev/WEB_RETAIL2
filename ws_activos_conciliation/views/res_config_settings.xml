<odoo>
    <record model="ir.ui.view" id="ws_conciliacion_res_config_settings">
        <field name="name">WS Conciliacion</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h2[@id='schedule_info']/following-sibling::div" position="after">
                <h2>Email Remitentes</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="mt16">
                            <label for="email_remitentes" class="o_light_label"/>
                            <field name="email_remitentes" placeholder="admin@odoo.com"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>